{
  "manifest_version": 3,
  "name": "Crypto Wallet Scraper",
  "version": "1.0",
  "description": "Extracts cryptocurrency wallet addresses from web pages",
  "permissions": [
    "alarms",
    "scripting",
    "storage",
    "tabs",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["https://extensionpay.com/*"],
    "js": ["ExtPay.js"],
    "run_at": "document_start"
  },
  {
    "matches": ["<all_urls>"],
    "js": ["ExtPay.js", "content.js"]
  }],
  "action": {
    "default_popup": "popup.html",
    "default_width": 400,
    "default_height": 600
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "author": "Martin Holy",
  "homepage_url": "https://leadgeneration.sbs",
  "short_name": "CWS-BTC",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["addresses.html", "addresses.js", "ExtPay.js"],
      "matches": ["<all_urls>"]
    }
  ]
}

